[
  {
    "name": "theme_info",
    "theme_name": "Aritzia Style Theme",
    "theme_version": "2.0.0",
    "theme_author": "Custom Theme",
    "theme_documentation_url": "https://shopify.dev",
    "theme_support_url": "https://shopify.dev"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_foreground",
        "label": "Foreground",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_text_muted",
        "label": "Muted text",
        "default": "#666666"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Borders",
        "default": "#e5e5e5"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#000000"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "cormorant_garamond_n4"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "assistant_n4"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter/X",
        "info": "https://twitter.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@yourstore"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/yourstore"
      }
    ]
  },
  {
    "name": "Currency format",
    "settings": [
      {
        "type": "header",
        "content": "Currency"
      },
      {
        "type": "checkbox",
        "id": "currency_show_code",
        "label": "Show currency code",
        "default": false
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_drawer_enabled",
        "label": "Enable cart drawer",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_show_free_shipping",
        "label": "Show free shipping progress",
        "default": true
      },
      {
        "type": "text",
        "id": "cart_free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "150",
        "info": "Enter amount without currency symbol"
      }
    ]
  }
]
