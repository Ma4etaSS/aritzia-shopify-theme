[
  {
    "name": "theme_info",
    "theme_name": "Aritzia Clone",
    "theme_version": "1.0.0",
    "theme_author": "Custom",
    "theme_documentation_url": "https://github.com/",
    "theme_support_url": "https://github.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary",
        "default": "#FFFFFF"
      },
      {
        "type": "header",
        "content": "Background colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_background_secondary",
        "label": "Secondary background",
        "default": "#F5F5F5"
      },
      {
        "type": "header",
        "content": "Text colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_text_secondary",
        "label": "Secondary text",
        "default": "#666666"
      },
      {
        "type": "header",
        "content": "Accent colors"
      },
      {
        "type": "color",
        "id": "color_sale",
        "label": "Sale badge",
        "default": "#C41E3A"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "playfair_display_n4"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "font_body_size",
        "label": "Base font size",
        "min": 14,
        "max": 18,
        "step": 1,
        "default": 16,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "label": "Page width",
        "min": 1000,
        "max": 1600,
        "step": 20,
        "default": 1440,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "label": "Vertical space between sections",
        "min": 20,
        "max": 100,
        "step": 4,
        "default": 60,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_show_free_shipping",
        "label": "Show free shipping progress",
        "default": true
      },
      {
        "type": "text",
        "id": "cart_free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "100"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@yourstore"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/yourstore"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "label": "Show product vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "label": "Show product price",
        "default": true
      }
    ]
  }
]
