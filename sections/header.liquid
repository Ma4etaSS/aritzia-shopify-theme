<style>
.header {
  position: fixed;
  top: var(--announcement-height, 40px);
  left: 0;
  right: 0;
  z-index: 1000;
  transition: background-color 0.3s ease, color 0.3s ease, top 0.3s ease;
}

.header--transparent {
  background-color: transparent;
  color: #fff;
}

.header--solid {
  background-color: #fff;
  color: #000;
  box-shadow: 0 1px 0 rgba(0,0,0,0.08);
}

.header__wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: var(--header-height, 60px);
  padding: 0 20px;
  max-width: 1600px;
  margin: 0 auto;
}

@media (min-width: 1024px) {
  .header__wrapper {
    padding: 0 40px;
    height: 70px;
  }
}

/* Logo */
.header__logo {
  font-family: var(--font-heading);
  font-size: 22px;
  font-weight: 400;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  transition: opacity 0.2s ease;
}

@media (min-width: 1024px) {
  .header__logo {
    font-size: 26px;
  }
}

.header__logo:hover {
  opacity: 0.7;
}

/* Navigation */
.header__nav {
  display: none;
}

@media (min-width: 1024px) {
  .header__nav {
    display: flex;
    align-items: center;
    gap: 28px;
  }
}

.header__nav-item {
  position: relative;
}

.header__nav-button,
.header__nav-link {
  display: flex;
  align-items: center;
  gap: 4px;
  font-family: var(--font-body);
  font-size: 13px;
  font-weight: 400;
  letter-spacing: 0.02em;
  padding: 8px 0;
  background: none;
  border: none;
  color: inherit;
  cursor: pointer;
  transition: opacity 0.2s ease;
}

.header__nav-button:hover,
.header__nav-link:hover {
  opacity: 0.7;
}

.header__nav-arrow {
  transition: transform 0.2s ease;
}

.header__nav-item:hover .header__nav-arrow {
  transform: rotate(180deg);
}

/* Mega Menu */
.mega-menu {
  position: fixed;
  top: calc(var(--announcement-height, 40px) + var(--header-height, 60px));
  left: 0;
  right: 0;
  background: #fff;
  color: #000;
  padding: 48px 40px;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  box-shadow: 0 8px 32px rgba(0,0,0,0.1);
  max-height: calc(100vh - var(--announcement-height, 40px) - var(--header-height, 60px));
  overflow-y: auto;
}

@media (min-width: 1024px) {
  .mega-menu {
    top: calc(var(--announcement-height, 40px) + 70px);
  }
}

.header__nav-item:hover .mega-menu,
.header__nav-item:focus-within .mega-menu {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.mega-menu__grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr) 2fr;
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto;
}

.mega-menu__heading {
  font-family: var(--font-body);
  font-size: 11px;
  font-weight: 500;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin-bottom: 20px;
  color: #666;
}

.mega-menu__links {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.mega-menu__link {
  font-family: var(--font-body);
  font-size: 14px;
  color: #000;
  transition: opacity 0.2s ease;
}

.mega-menu__link:hover {
  opacity: 0.6;
}

.mega-menu__link:focus {
  outline: 1px solid #000;
  outline-offset: 2px;
}

.mega-menu__images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

.mega-menu__image-card {
  position: relative;
  overflow: hidden;
  aspect-ratio: 3/4;
  display: block;
}

.mega-menu__image-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.mega-menu__image-card:hover img {
  transform: scale(1.05);
}

.mega-menu__image-label {
  position: absolute;
  bottom: 16px;
  left: 16px;
  font-family: var(--font-body);
  font-size: 13px;
  font-weight: 500;
  color: #000;
  background: #fff;
  padding: 8px 12px;
}

/* Header Icons */
.header__icons {
  display: flex;
  align-items: center;
  gap: 16px;
}

@media (min-width: 1024px) {
  .header__icons {
    gap: 20px;
  }
}

.header__icon {
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: var(--font-body);
  font-size: 12px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  background: none;
  border: none;
  color: inherit;
  cursor: pointer;
  transition: opacity 0.2s ease;
  padding: 4px;
}

.header__icon:hover {
  opacity: 0.7;
}

.header__icon:focus {
  outline: 1px solid currentColor;
  outline-offset: 2px;
}

.header__icon-text {
  display: none;
}

@media (min-width: 1024px) {
  .header__icon-text {
    display: inline;
  }
}

.header__signin {
  display: none;
}

@media (min-width: 1024px) {
  .header__signin {
    display: flex;
  }
}

/* Mobile Menu Button */
.header__menu-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4px;
  background: none;
  border: none;
  color: inherit;
  cursor: pointer;
}

@media (min-width: 1024px) {
  .header__menu-toggle {
    display: none;
  }
}
</style>

<script>
(function() {
  const header = document.querySelector('[data-header]');
  if (!header) return;

  let lastScroll = 0;
  const isHomepage = document.body.classList.contains('template-index');

  function updateHeader() {
    const scroll = window.scrollY;

    if (isHomepage) {
      if (scroll > 100) {
        header.classList.remove('header--transparent');
        header.classList.add('header--solid');
      } else {
        header.classList.add('header--transparent');
        header.classList.remove('header--solid');
      }
    }

    lastScroll = scroll;
  }

  window.addEventListener('scroll', updateHeader, { passive: true });
  updateHeader();

  // Mega menu accessibility
  const navItems = header.querySelectorAll('[data-nav-item]');
  navItems.forEach(item => {
    const button = item.querySelector('.header__nav-button');
    const menu = item.querySelector('.mega-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !isExpanded);
        menu.setAttribute('aria-hidden', isExpanded);
      });

      // Close on escape
      item.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          button.setAttribute('aria-expanded', 'false');
          menu.setAttribute('aria-hidden', 'true');
          button.focus();
        }
      });
    }
  });
})();
</script>

