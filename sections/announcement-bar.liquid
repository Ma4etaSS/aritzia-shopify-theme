{%- comment -%}
  Aritzia-style Announcement Bar
  - Dismissible
  - Multiple messages with rotation
  - Link support
{%- endcomment -%}

{%- if section.blocks.size > 0 -%}
  <div class="announcement-bar" data-announcement-bar>
    <div class="announcement-bar__wrapper">
      {%- for block in section.blocks -%}
        <div 
          class="announcement-bar__message{% if forloop.first %} is-active{% endif %}"
          {{ block.shopify_attributes }}
          data-announcement-message
        >
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar__link">
              <span class="announcement-bar__text">{{ block.settings.text }}</span>
              {%- if block.settings.link_text != blank -%}
                <span class="announcement-bar__cta">{{ block.settings.link_text }}</span>
              {%- endif -%}
            </a>
          {%- else -%}
            <span class="announcement-bar__text">{{ block.settings.text }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    {%- if section.settings.show_close -%}
      <button type="button" class="announcement-bar__close" aria-label="Close announcement" data-announcement-close>
        {% render 'icon-close' %}
      </button>
    {%- endif -%}
  </div>
{%- endif -%}

<style>
  .announcement-bar {
    position: relative;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: var(--space-3) var(--space-12);
    text-align: center;
    z-index: var(--z-sticky);
  }

  .announcement-bar__wrapper {
    position: relative;
    min-height: 20px;
  }

  .announcement-bar__message {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-slow), visibility var(--transition-slow);
  }

  .announcement-bar__message.is-active {
    position: relative;
    opacity: 1;
    visibility: visible;
  }

  .announcement-bar__link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    color: inherit;
  }

  .announcement-bar__text {
    font-size: var(--text-sm);
  }

  .announcement-bar__cta {
    font-size: var(--text-sm);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .announcement-bar__close {
    position: absolute;
    right: var(--space-4);
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .announcement-bar__close:hover {
    opacity: 1;
  }

  .announcement-bar__close svg {
    width: 12px;
    height: 12px;
  }
</style>

{% schema %}
{
  "name": "Announcement bar",
  "class": "section-announcement-bar",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "Show close button",
      "default": true
    },
    {
      "type": "range",
      "id": "rotation_speed",
      "label": "Message rotation speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5,
      "unit": "s"
    }
  ],
  "blocks": [
    {
      "type": "message",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free shipping on orders over $150"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "default": {
    "blocks": [
      {
        "type": "message",
        "settings": {
          "text": "Free shipping on orders over $150",
          "link_text": "Shop Now"
        }
      }
    ]
  }
}
{% endschema %}
