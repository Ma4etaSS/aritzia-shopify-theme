{%- comment -%}
  Main Page Section
{%- endcomment -%}

<section class="main-page" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="main-page__container container">
    <h1 class="main-page__title">{{ page.title }}</h1>
    <div class="main-page__content rte">
      {{ page.content }}
    </div>
  </div>
</section>

<style>
  .main-page__title {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: var(--font-normal);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .main-page__title {
      font-size: var(--text-4xl);
    }
  }

  .main-page__content {
    max-width: 800px;
  }

  .rte h2, .rte h3, .rte h4 {
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .rte p {
    margin-bottom: var(--space-4);
  }

  .rte ul, .rte ol {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .rte a {
    text-decoration: underline;
  }
</style>

{% schema %}
{
  "name": "Page",
  "class": "section-main-page",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ]
}
{% endschema %}
