{%- comment -%}
  Aritzia-style Featured Collection
  - Section heading with optional link
  - Product grid
  - "View All" button
{%- endcomment -%}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_count = section.settings.products_count | default: 8
-%}

<section class="featured-collection section">
  <div class="featured-collection__container container">
    
    {% comment %} Section Header {% endcomment %}
    <div class="featured-collection__header">
      <div class="featured-collection__header-content">
        {%- if section.settings.subheading != blank -%}
          <p class="featured-collection__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        <h2 class="featured-collection__heading">
          {%- if section.settings.heading != blank -%}
            {{ section.settings.heading }}
          {%- elsif collection -%}
            {{ collection.title }}
          {%- else -%}
            Featured Collection
          {%- endif -%}
        </h2>
        {%- if section.settings.description != blank -%}
          <div class="featured-collection__description">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
      {%- if section.settings.show_view_all and collection -%}
        <a href="{{ collection.url }}" class="featured-collection__view-all link-underline">
          View All
        </a>
      {%- endif -%}
    </div>

    {% comment %} Product Grid {% endcomment %}
    <div class="product-grid">
      {%- if collection -%}
        {%- for product in collection.products limit: products_count -%}
          <div class="product-grid__item">
            {% render 'product-card', 
              product: product, 
              show_vendor: section.settings.show_vendor,
              show_secondary_image: section.settings.show_secondary_image,
              show_quick_add: section.settings.show_quick_add,
              lazy_load: true
            %}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..products_count) -%}
          <div class="product-grid__item">
            <article class="product-card">
              <div class="product-card__media aspect-portrait">
                <div class="product-card__placeholder">
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder-svg' }}
                </div>
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">Example Product {{ i }}</h3>
                <div class="product-card__price">
                  <div class="price">
                    <span class="price__regular">{{ 9999 | money }}</span>
                  </div>
                </div>
              </div>
            </article>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

    {% comment %} View All Button (Bottom) {% endcomment %}
    {%- if section.settings.show_view_all_bottom and collection -%}
      <div class="featured-collection__footer">
        <a href="{{ collection.url }}" class="btn btn-secondary">
          View All {{ collection.title }}
        </a>
      </div>
    {%- endif -%}

  </div>
</section>

<style>
  .featured-collection {
    padding: var(--spacing-sections) 0;
  }

  .featured-collection__header {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .featured-collection__header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  .featured-collection__subheading {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  .featured-collection__heading {
    font-family: var(--font-heading);
    font-size: var(--text-3xl);
    font-weight: var(--font-normal);
  }

  @media (min-width: 768px) {
    .featured-collection__heading {
      font-size: var(--text-4xl);
    }
  }

  .featured-collection__description {
    margin-top: var(--space-3);
    color: var(--color-text-secondary);
    max-width: 600px;
  }

  .featured-collection__description p {
    margin: 0;
  }

  .featured-collection__view-all {
    font-size: var(--text-sm);
    flex-shrink: 0;
  }

  .featured-collection__footer {
    display: flex;
    justify-content: center;
    margin-top: var(--space-10);
  }
</style>

{% schema %}
{
  "name": "Featured collection",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Products"
    },
    {
      "type": "range",
      "id": "products_count",
      "label": "Number of products",
      "min": 4,
      "max": 16,
      "step": 4,
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show secondary image on hover",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show quick add button",
      "default": true
    },
    {
      "type": "header",
      "content": "View all"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show \"View all\" link in header",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all_bottom",
      "label": "Show \"View all\" button at bottom",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
