{%- comment -%}
  Aritzia-style Hero Banner
  ALWAYS shows content with fallback image
{%- endcomment -%}

{%- liquid
  if section.blocks.size > 0
    assign block = section.blocks.first
    assign hero_heading = block.settings.heading | default: 'Spring Collection'
    assign hero_subheading = block.settings.subheading | default: 'New Season'
    assign hero_button = block.settings.button_label | default: 'Shop Now'
    assign hero_link = block.settings.button_link | default: '/collections/all'
    assign hero_image = block.settings.image
    assign show_overlay = block.settings.show_overlay | default: true
  else
    assign hero_heading = 'Spring Collection'
    assign hero_subheading = 'New Season'
    assign hero_button = 'Shop Now'
    assign hero_link = '/collections/all'
    assign hero_image = nil
    assign show_overlay = true
  endif
-%}

<section class="hero">
  {%- comment -%} Background {%- endcomment -%}
  <div class="hero__bg">
    {%- if hero_image != blank -%}
      <img
        src="{{ hero_image | image_url: width: 1920 }}"
        alt="{{ hero_heading | escape }}"
        class="hero__img"
        loading="eager"
      >
    {%- else -%}
      {%- comment -%} Fallback: Beautiful gradient + pattern {%- endcomment -%}
      <div class="hero__fallback"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Overlay {%- endcomment -%}
  {%- if show_overlay -%}
    <div class="hero__overlay"></div>
  {%- endif -%}

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero__content">
    <div class="container">
      <div class="hero__text">
        <p class="hero__sub">{{ hero_subheading }}</p>
        <h1 class="hero__title">{{ hero_heading }}</h1>
        <a href="{{ hero_link }}" class="hero__btn">{{ hero_button }}</a>
      </div>
    </div>
  </div>
</section>

<style>
/* Hero - Full Screen */
.hero {
  position: relative;
  width: 100%;
  height: 100vh;
  min-height: 500px;
  max-height: 1000px;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

/* Background */
.hero__bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.hero__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center top;
}

/* Fallback gradient background */
.hero__fallback {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, 
    #1a1a2e 0%, 
    #16213e 25%,
    #0f3460 50%,
    #1a1a2e 75%,
    #0d0d0d 100%
  );
  background-size: 200% 200%;
  animation: gradientMove 10s ease infinite;
}

.hero__fallback::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(255,255,255,0.05) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255,255,255,0.03) 0%, transparent 40%),
    radial-gradient(circle at 50% 50%, rgba(255,255,255,0.02) 0%, transparent 60%);
}

@keyframes gradientMove {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* Overlay */
.hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.5) 0%,
    rgba(0,0,0,0.2) 30%,
    rgba(0,0,0,0) 60%
  );
  z-index: 2;
  pointer-events: none;
}

/* Content */
.hero__content {
  position: relative;
  z-index: 3;
  width: 100%;
  padding-bottom: 60px;
}

@media (min-width: 768px) {
  .hero__content {
    padding-bottom: 80px;
  }
}

@media (min-width: 1024px) {
  .hero__content {
    padding-bottom: 100px;
  }
}

.hero__text {
  max-width: 600px;
  color: #fff;
}

.hero__sub {
  font-size: 11px;
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  margin: 0 0 12px 0;
  opacity: 0.9;
}

.hero__title {
  font-family: 'Playfair Display', Georgia, serif;
  font-size: 32px;
  font-weight: 400;
  line-height: 1.1;
  margin: 0 0 24px 0;
  letter-spacing: -0.02em;
}

@media (min-width: 768px) {
  .hero__title {
    font-size: 48px;
  }
}

@media (min-width: 1024px) {
  .hero__title {
    font-size: 64px;
  }
}

.hero__btn {
  display: inline-block;
  padding: 14px 36px;
  background: #fff;
  color: #000;
  font-size: 11px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  text-decoration: none;
  transition: all 0.3s ease;
}

.hero__btn:hover {
  background: #000;
  color: #fff;
  opacity: 1;
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "class": "hero-section",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "New Season"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Spring Collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link",
          "default": "/collections/all"
        },
        {
          "type": "checkbox",
          "id": "show_overlay",
          "label": "Show overlay",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
