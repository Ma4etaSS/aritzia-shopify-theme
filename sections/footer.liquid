<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__column">
        <h4 class="footer__heading">Help</h4>
        <nav class="footer__links" aria-label="Help links">
          <a href="/pages/contact" class="footer__link">Contact Us</a>
          <a href="/pages/shipping" class="footer__link">Shipping</a>
          <a href="/pages/returns" class="footer__link">Returns & Exchanges</a>
          <a href="/pages/faq" class="footer__link">FAQ</a>
          <a href="/pages/size-guide" class="footer__link">Size Guide</a>
        </nav>
      </div>

      <div class="footer__column">
        <h4 class="footer__heading">About</h4>
        <nav class="footer__links" aria-label="About links">
          <a href="/pages/about" class="footer__link">Our Story</a>
          <a href="/pages/careers" class="footer__link">Careers</a>
          <a href="/pages/stores" class="footer__link">Store Locator</a>
          <a href="/pages/sustainability" class="footer__link">Sustainability</a>
        </nav>
      </div>

      <div class="footer__column">
        <h4 class="footer__heading">Legal</h4>
        <nav class="footer__links" aria-label="Legal links">
          <a href="/policies/privacy-policy" class="footer__link">Privacy Policy</a>
          <a href="/policies/terms-of-service" class="footer__link">Terms of Service</a>
          <a href="/pages/accessibility" class="footer__link">Accessibility</a>
        </nav>
      </div>

      <div class="footer__column">
        <h4 class="footer__heading">Follow Us</h4>
        <nav class="footer__links" aria-label="Social links">
          <a href="https://instagram.com" class="footer__link" target="_blank" rel="noopener noreferrer">Instagram</a>
          <a href="https://tiktok.com" class="footer__link" target="_blank" rel="noopener noreferrer">TikTok</a>
          <a href="https://pinterest.com" class="footer__link" target="_blank" rel="noopener noreferrer">Pinterest</a>
          <a href="https://facebook.com" class="footer__link" target="_blank" rel="noopener noreferrer">Facebook</a>
        </nav>
      </div>

      <div class="footer__column footer__newsletter">
        <h4 class="footer__heading">Newsletter</h4>
        <p class="footer__newsletter-text">Subscribe for exclusive offers and new arrivals.</p>
        
        {%- form 'customer', id: 'newsletter-form', class: 'footer__newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="footer__newsletter-field">
            <label for="newsletter-email" class="visually-hidden">Email address</label>
            <input 
              type="email" 
              id="newsletter-email"
              name="contact[email]" 
              class="footer__newsletter-input"
              placeholder="Enter your email"
              required
              autocomplete="email"
              aria-label="Email address"
            >
            <button type="submit" class="footer__newsletter-button" aria-label="Subscribe to newsletter">
              Subscribe
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
      
      <div class="footer__social" aria-label="Social media links">
        <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Instagram" class="footer__social-link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="20" height="20">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
        </a>
        <a href="https://tiktok.com" target="_blank" rel="noopener noreferrer" aria-label="Follow us on TikTok" class="footer__social-link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
          </svg>
        </a>
        <a href="https://pinterest.com" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Pinterest" class="footer__social-link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M12 0a12 12 0 0 0-4.37 23.17c-.1-.94-.2-2.4.04-3.44l1.4-5.97s-.36-.72-.36-1.78c0-1.67.97-2.92 2.17-2.92 1.02 0 1.52.77 1.52 1.69 0 1.03-.66 2.57-1 4-.28 1.2.6 2.17 1.78 2.17 2.14 0 3.78-2.26 3.78-5.5 0-2.88-2.07-4.9-5.02-4.9-3.42 0-5.43 2.57-5.43 5.22 0 1.03.4 2.14.9 2.74.1.12.11.22.08.34l-.34 1.36c-.05.22-.17.27-.4.16-1.5-.7-2.43-2.88-2.43-4.64 0-3.78 2.75-7.25 7.92-7.25 4.16 0 7.4 2.97 7.4 6.93 0 4.14-2.6 7.46-6.22 7.46-1.21 0-2.36-.63-2.75-1.38l-.75 2.85c-.27 1.04-1 2.35-1.49 3.15A12 12 0 1 0 12 0z"/>
          </svg>
        </a>
        <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Facebook" class="footer__social-link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
.footer {
  background: #000;
  color: #fff;
  padding: 60px 0 40px;
}

@media (min-width: 1024px) {
  .footer {
    padding: 80px 0 48px;
  }
}

.footer__grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 40px 24px;
  margin-bottom: 60px;
}

@media (min-width: 768px) {
  .footer__grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }
}

@media (min-width: 1024px) {
  .footer__grid {
    grid-template-columns: repeat(5, 1fr);
    gap: 48px;
  }
}

.footer__heading {
  font-family: var(--font-body);
  font-size: 11px;
  font-weight: 500;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin-bottom: 24px;
  color: rgba(255,255,255,0.5);
}

.footer__links {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.footer__link {
  font-family: var(--font-body);
  font-size: 13px;
  color: #fff;
  transition: opacity 0.2s ease;
}

.footer__link:hover {
  opacity: 0.6;
}

.footer__link:focus {
  outline: 1px solid rgba(255,255,255,0.5);
  outline-offset: 2px;
}

/* Newsletter */
.footer__newsletter {
  grid-column: 1 / -1;
}

@media (min-width: 1024px) {
  .footer__newsletter {
    grid-column: auto;
  }
}

.footer__newsletter-text {
  font-size: 13px;
  margin-bottom: 20px;
  opacity: 0.8;
  line-height: 1.5;
}

.footer__newsletter-field {
  display: flex;
  gap: 0;
}

.footer__newsletter-input {
  flex: 1;
  padding: 14px 16px;
  background: transparent;
  border: 1px solid rgba(255,255,255,0.3);
  border-right: none;
  color: #fff;
  font-family: var(--font-body);
  font-size: 14px;
  transition: border-color 0.2s ease;
}

.footer__newsletter-input::placeholder {
  color: rgba(255,255,255,0.5);
}

.footer__newsletter-input:focus {
  outline: none;
  border-color: #fff;
}

.footer__newsletter-button {
  padding: 14px 24px;
  background: #fff;
  color: #000;
  font-family: var(--font-body);
  font-size: 11px;
  font-weight: 500;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.footer__newsletter-button:hover {
  background: rgba(255,255,255,0.9);
}

.footer__newsletter-button:focus {
  outline: 2px solid #fff;
  outline-offset: 2px;
}

/* Footer Bottom */
.footer__bottom {
  display: flex;
  flex-direction: column;
  gap: 24px;
  padding-top: 40px;
  border-top: 1px solid rgba(255,255,255,0.1);
}

@media (min-width: 768px) {
  .footer__bottom {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
}

.footer__copyright {
  font-size: 11px;
  color: rgba(255,255,255,0.5);
  letter-spacing: 0.02em;
}

.footer__social {
  display: flex;
  gap: 20px;
}

.footer__social-link {
  color: #fff;
  opacity: 0.6;
  transition: opacity 0.2s ease;
}

.footer__social-link:hover {
  opacity: 1;
}

.footer__social-link:focus {
  outline: 1px solid rgba(255,255,255,0.5);
  outline-offset: 4px;
}

/* Visually Hidden */
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
</style>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social links",
      "default": true
    }
  ]
}
{% endschema %}
